<% @ufs.each do |uf| %>
  <tr>
    <td><%= uf.sigla %></td>
    <td><%= uf.nome %></td>
    <td><%= link_to content_tag(:span, "Exibir"), uf, :class => "btn btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_uf_path(uf), :class => "btn btn-small" %></td>
