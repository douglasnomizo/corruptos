<h2>Edit <%= resource_name.to_s.humanize %></h2>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, :label => "Nome", :autofocus => true %>
  <%= f.input :email, :required => true %>
  <%= f.input :password, :label => "Senha", :autocomplete => "off", :hint => "deixe em branco se não quiser alterar", :required => false %>
  <%= f.input :password_confirmation, :label => "Confirmação da Senha", :required => false %>
  <%= f.input :current_password, :hint => "digite sua senha atual para confirmar", :required => true %>
  <%= f.button :submit, 'Salvar', :class => 'btn-primary' %>
<% end %>
<h3>Cancel my account</h3>
<p>Unhappy? <%= link_to "Cancelar minha conta", registration_path(resource_name), :data => { :confirm => "Tem certeza?" }, :method => :delete %>.</p>
<%= link_to "Voltar", :back %>