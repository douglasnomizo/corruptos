<%= simple_form_for @coligacao, html: {class: 'form-horizontal'} do |c| %>
  
  <% unless @coligacao.errors[:base].empty? %>
    <div class="alert alert-error">
      <%= c.error :base %>
    </div>
  <% end %>

  <%= c.input :nome, input_html: {maxlength: 55, style: 'width: 450px'} %>

  <%= c.simple_fields_for :cargo_eleicao do |ce| %>
  	<%= render "cargo_eleicaos/cargo_eleicao_fields", f: ce %>
  <% end %>
  	
  <%= c.association :partidos, as: :check_boxes, label_method: lambda { |obj| obj.nome } %>

  <div class="form-inputs">
    <%= c.button :submit, "Salvar" %>
  </div>
<% end %>