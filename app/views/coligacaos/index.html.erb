<div class="page-header"><h1>Coligações</h1></div>

<%= search_form_for @q, :html => {:class => "form-horizontal form-search"} do |f| %>
  <%= f.text_field :nome_cont, :placeholder => "Nome da Coligação" %>
  <%= f.submit "Buscar", :class => "btn btn-success" %>
<% end %>

<table class="table table-condensed table-striped">
  <tr>
    <th>Cargo</th>
    <th><%= sort_link @q, :nome, "Nome" %></th>
    <th>Uf</th>
    <th>Município</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coligacoes.each do |coligacao| %>
  <tr>
    <td><%= coligacao.cargo_eleicao.cargo.nome %></td>
    <td><%= coligacao.nome %></td>
    <td><%= coligacao.cargo_eleicao.uf.sigla if coligacao.cargo_eleicao.uf %></td>
    <td><%= coligacao.cargo_eleicao.municipio.nome if coligacao.cargo_eleicao.municipio %></td>
    <td><%= link_to content_tag(:span, "Exibir"), coligacao, :class => "btn btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_coligacao_path(coligacao), :class => "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova Coligação', new_coligacao_path, :class => "btn btn-small btn-info" %>