<div class="page-header"><h1>Seções</h1></div>

<%= search_form_for @q, :html => {:class => "form-horizontal form-search"} do |f| %>
  <%= f.text_field :zona_endereco_municipio_uf_sigla_eq, :placeholder => "Sigla do Estado" %> <strong>ou</strong>
  <%= f.text_field :zona_endereco_municipio_nome_cont, :placeholder => "Nome do Município" %>
  <%= f.submit "Buscar", :class => "btn btn-success" %>
<% end %>

<table class="table table-condensed table-striped">
  <tr>
    <th>Estado</th>
    <th>Município</th>
    <th>Zona</th>
    <th>Seção</th>
    <th>Limite de eleitores</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @secaos.each do |secao| %>
  <tr>
    <td><%= secao.zona.endereco.municipio.uf.nome %></td>
    <td><%= secao.zona.endereco.municipio.nome %></td>
    <td><%= secao.zona.id %></td>
    <td><%= secao.codigo %></td>
    <td><%= secao.limite_eleitores %></td>
    <td><%= link_to content_tag(:span, "Exibir"), secao, :class => "btn btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_secao_path(secao), :class => "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @secaos %>

<br />
<br />

<%= link_to 'Nova Secao', new_secao_path, :class => "btn btn-small btn-info" %>
