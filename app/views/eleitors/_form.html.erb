<%= simple_form_for @eleitor, :html => {:class => 'form-horizontal'} do |ele| %>
  <%= ele.error_notification %>

  <div class="form-inputs">
    <%= ele.input :nome %>
    <%= ele.input :nome_mae %>
    <%= ele.input :rg %>
    <%= ele.input :data_nascimento, :as => :date, :start_year => 1900, :end_year => Date.today.year %>
    <%= ele.input :cpf %>
    <%= ele.simple_fields_for :endereco do |ende| %>
      
      <div class="control-group string optional disabled">
      <label class="string optional control-label" for="eleitor_endereco_cep">CEP</label>
      <div class="controls control-group string required">
        <div class="input-append">
          <input class="string required" id="eleitor_endereco_cep" name="eleitor[endereco][cep]" size="50" type="text">
          <label class="add-on"><a class="btn btn-small btn-info" onclick="busca_endereco_cep();">Buscar CEP</a></label>    
        </div>
      </div>

      <%= ende.input :logradouro %>
      <%= ende.input :numero %>
      <%= ende.input :bairro %>
      <%= ende.input :complemento %>
    <% end %>
  </div>

  <div class="form-inputs">
    <%= submit_tag 'Cancelar', :type => 'button', :class=> "btn", :onclick => "history.back();" %>
    <%= ele.button :submit %>
  </div>
<% end %>