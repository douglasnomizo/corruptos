<h1>Lista de partidos</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Sigla</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @partidos.each do |partido| %>
  <tr>
    <td><%= partido.nome %></td>
    <td><%= partido.sigla %></td>
    <td><%= link_to content_tag(:span, "Exibir"), partido %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_partido_path(partido) %></td>
    <td><%= link_to content_tag(:span, "Excluir"), partido, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova Partido', new_partido_path %>
