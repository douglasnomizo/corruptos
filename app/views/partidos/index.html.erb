<div class="page-header"><h1>Lista de partidos</h1></div>

<table class="table table-condensed table-striped">
  <tr>
    <th>Nome</th>
    <th>Sigla</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @partidos.each do |partido| %>
  <tr>
    <td><%= partido.nome %></td>
    <td><%= partido.sigla %></td>
    <td><%= link_to content_tag(:span, "Exibir"), partido, :class => "btn btn-info btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_partido_path(partido), :class => "btn btn-info btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

