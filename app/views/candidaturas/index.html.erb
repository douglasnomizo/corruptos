<div class="page-header"><h1>Candidaturas</h1></div>

<table class="table table-condensed table-striped">
  <tr>
    <th>Candidato</th>
    <th>Eleição</th>
    <th>Cargo</th>
    <th>Cidade/Uf</th>
    <th>Partido</th>
    <th>Codigo candidato</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidaturas.each do |candidatura| %>
  <tr>
    <td><%= candidatura.candidato.nome_campanha %></td>
    <td><%= candidatura.cargo_eleicao.eleicao.ano %></td>
    <td><%= candidatura.cargo_eleicao.cargo.nome %></td>
    <td>
      <% if candidatura.cargo_eleicao.municipio %>
        <%= candidatura.cargo_eleicao.municipio.cidade_uf %>
      <% else %>
          <%= "Nacional" %>
      <% end %>
    </td>
    <td><%= candidatura.partido.nome %></td>
    <td><%= candidatura.codigo_candidato %></td>
    <td><%= link_to content_tag(:span, "Exibir"), candidatura, :class => "btn btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_candidatura_path(candidatura), :class => "btn btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova Candidatura', new_candidatura_path, :class => "btn btn-small btn-info" %>