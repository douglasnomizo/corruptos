<div class="page-header"><h1>Lista de candidaturas</h1></div>

<table class="table table-condensed table-striped">
  <tr>
    <th>Candidato</th>
    <th>Cargo eleicao</th>
    <th>Partido</th>
    <th>Codigo candidato</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @candidaturas.each do |candidatura| %>
  <tr>
    <td><%= candidatura.candidato %></td>
    <td><%= candidatura.cargo_eleicao %></td>
    <td><%= candidatura.partido %></td>
    <td><%= candidatura.codigo_candidato %></td>
    <td><%= link_to content_tag(:span, "Exibir"), candidatura, :class => "btn btn-info btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_candidatura_path(candidatura), :class => "btn btn-info btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova Candidatura', new_candidatura_path %>
