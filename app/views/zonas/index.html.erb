<div class="page-header"><h1>Zonas</h1></div>

<table class="table table-condensed table-striped">
  <tr class="success">
    <th>Código</th>
    <th>Descrição</th>
    <th>Endereco</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @zonas.each do |zona| %>
  <tr>
    <td><%= adiciona_zero_esquerda(zona.id) %></td>
    <td><%= zona.descricao %></td>
    <td><%= zona.endereco.descricao %></td>
    <td><%= link_to content_tag(:span, "Exibir"), zona, :class => "btn btn-info btn-small" %></td>
    <td><%= link_to content_tag(:span, "Alterar"), edit_zona_path(zona), :class => "btn btn-info btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

