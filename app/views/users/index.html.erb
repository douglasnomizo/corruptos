<h3>Usuários</h3>
<div class="span8">
<table class="table table-condensed">
	  <thead>
      <tr>
          <th>Usuário</th>
          <th>Email</th>
          <th>Data de Registro</th>
          <th>Perfil</th>
          <th></th>
          <th></th>                                      
      </tr>
  </thead>   
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= user.email %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= user.roles.first.name.titleize unless user.roles.first.nil? %></td>
        <td>
          <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini" type="button">Alterar perfil</a>
          <%= render user %>
        </td>
        <td><%= link_to("Excluir usuário", user_path(user), :data => { :confirm => "Tem certeza?" }, :method => :delete, :class => 'btn btn-mini') unless user == current_user %></td>                                       
    </tr>
  <% end %>
  </tbody>
</table>
</div>